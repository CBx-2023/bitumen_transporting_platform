/* pages/role-select/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  min-height: 100vh;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  background-color: #f5f7fa;
}

.header {
  width: 100%;
  text-align: center;
  margin-bottom: 60rpx;
  margin-top: 100rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
  display: block;
}

.role-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.role-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.role-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}

.role-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  flex: 1;
}

.role-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.footer {
  margin-top: 80rpx;
  width: 100%;
  text-align: center;
}

.copyright {
  font-size: 24rpx;
  color: #95a5a6;
}