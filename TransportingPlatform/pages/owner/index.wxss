/* pages/owner/index.wxss */
page {
  height: auto;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
  overflow-x: hidden; /* 隐藏水平滚动条 */
  width: 100%;
  box-sizing: border-box; /* 确保padding不会增加宽度 */
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #f5f7fa;
}

/* 货主信息卡片 */
.owner-card {
  width: 90%;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.owner-info {
  display: flex;
  align-items: center;
}

.owner-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
  background-color: #e0e0e0;
}

.owner-details {
  display: flex;
  flex-direction: column;
}

.owner-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.owner-phone, .owner-company {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 6rpx;
}

.create-btn {
  min-width: 180rpx;
  height: 70rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background-color: #2c3e50;
  color: #ffffff;
  border: none;
}

/* 统计信息卡片 */
.statistics-card {
  width: 90%;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 订单列表 */
.section-title {
  width: 90%;
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin: 30rpx 0 20rpx;
}

.order-list {
  width: 90%;
  margin-bottom: 30rpx;
}

.order-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.order-id {
  font-size: 28rpx;
  color: #7f8c8d;
}

.order-status {
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-waiting {
  background-color: #3498db;
  color: #ffffff;
}

.status-inprogress {
  background-color: #f39c12;
  color: #ffffff;
}

.status-completed {
  background-color: #2ecc71;
  color: #ffffff;
}

.order-content {
  margin-bottom: 20rpx;
}

.order-route {
  margin-bottom: 20rpx;
}

.location-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.location-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
}

.start-dot {
  background-color: #2ecc71;
}

.end-dot {
  background-color: #e74c3c;
}

.route-line {
  width: 4rpx;
  height: 40rpx;
  background-color: #bdc3c7;
  margin-left: 8rpx;
  margin-bottom: 10rpx;
}

.location-text {
  font-size: 28rpx;
  color: #2c3e50;
  flex: 1;
}

.order-info {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.info-label {
  font-size: 28rpx;
  color: #7f8c8d;
  width: 180rpx;
}

.info-value {
  font-size: 28rpx;
  color: #2c3e50;
  flex: 1;
}

.price {
  color: #e74c3c;
  font-weight: bold;
}

.driver-info-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx dashed #e0e0e0;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  min-width: 160rpx;
  height: 70rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  line-height: 70rpx;
  border-radius: 8rpx;
  background-color: #f5f7fa;
  color: #7f8c8d;
  border: none;
}

.action-btn.primary {
  background-color: #2c3e50;
  color: #ffffff;
}

.action-btn.danger {
  background-color: #e74c3c;
  color: #ffffff;
}

/* 空列表 */
.empty-list {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #95a5a6;
}