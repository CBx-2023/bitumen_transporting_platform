/* pages/order/detail.wxss */
page {
  height: auto;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
  overflow-x: hidden; /* 隐藏水平滚动条 */
  width: 100%;
  box-sizing: border-box; /* 确保padding不会增加宽度 */
}

.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #f5f7fa;
  padding-bottom: 150rpx; /* 为底部按钮留出空间 */
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #2c3e50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 订单状态卡片 */
.status-card {
  background-color: #ffffff;
  width: 90%;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}

.status-waiting {
  background-color: #3498db;
  color: #ffffff;
}

.status-inprogress {
  background-color: #f39c12;
  color: #ffffff;
}

.status-completed {
  background-color: #2ecc71;
  color: #ffffff;
}

.order-id {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 详情卡片 */
.detail-card {
  width: 90%;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 路线信息 */
.route-info {
  margin-bottom: 10rpx;
}

.location-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.location-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
}

.start-dot {
  background-color: #2ecc71;
}

.end-dot {
  background-color: #e74c3c;
}

.route-line {
  width: 4rpx;
  height: 40rpx;
  background-color: #bdc3c7;
  margin-left: 8rpx;
  margin-bottom: 10rpx;
}

.location-text {
  font-size: 28rpx;
  color: #2c3e50;
  flex: 1;
}

/* 信息项 */
.info-item {
  display: flex;
  margin-bottom: 16rpx;
}

.info-label {
  font-size: 28rpx;
  color: #7f8c8d;
  width: 180rpx;
}

.info-value {
  font-size: 28rpx;
  color: #2c3e50;
  flex: 1;
}

.price {
  color: #e74c3c;
  font-weight: bold;
}

/* 联系按钮 */
.contact-btn {
  margin-top: 20rpx;
  padding: 16rpx 0;
  text-align: center;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #2c3e50;
}

/* 时间线 */
.timeline {
  position: relative;
}

.timeline-item {
  position: relative;
  padding-left: 30rpx;
  margin-bottom: 30rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #2c3e50;
  border-radius: 50%;
}

.timeline-item:not(:last-child)::before {
  content: '';
  position: absolute;
  left: 7rpx;
  top: 26rpx;
  width: 2rpx;
  height: calc(100% + 14rpx);
  background-color: #bdc3c7;
}

.timeline-content {
  display: flex;
  flex-direction: column;
}

.timeline-time {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 6rpx;
}

.timeline-event {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.timeline-operator {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  background-color: #f5f7fa;
  color: #7f8c8d;
  border: none;
}

.action-btn.primary {
  background-color: #2c3e50;
  color: #ffffff;
}

.action-btn.danger {
  background-color: #e74c3c;
  color: #ffffff;
}