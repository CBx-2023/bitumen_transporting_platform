/* pages/order/list.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f7fa;
  padding-top: 90rpx;
}

/* 标签页导航 */
.tabs {
  display: flex;
  background-color: #ffffff;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  height: 90rpx;
}

.tab {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #7f8c8d;
  position: relative;
}

.tab.active {
  color: #2c3e50;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #2c3e50;
  border-radius: 3rpx;
}

/* 订单列表 */
.order-list-container {
  flex: 1;
  padding: 30rpx;
}

.order-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.order-id {
  font-size: 28rpx;
  color: #7f8c8d;
}

.order-status {
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-waiting {
  background-color: #3498db;
  color: #ffffff;
}

.status-inprogress {
  background-color: #f39c12;
  color: #ffffff;
}

.status-completed {
  background-color: #2ecc71;
  color: #ffffff;
}

.order-content {
  margin-bottom: 20rpx;
}

.order-route {
  margin-bottom: 20rpx;
}

.location-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.location-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
}

.start-dot {
  background-color: #2ecc71;
}

.end-dot {
  background-color: #e74c3c;
}

.route-line {
  width: 4rpx;
  height: 40rpx;
  background-color: #bdc3c7;
  margin-left: 8rpx;
  margin-bottom: 10rpx;
}

.location-text {
  font-size: 28rpx;
  color: #2c3e50;
  flex: 1;
}

.order-info {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.info-label {
  font-size: 28rpx;
  color: #7f8c8d;
  width: 180rpx;
}

.info-value {
  font-size: 28rpx;
  color: #2c3e50;
  flex: 1;
}

.price {
  color: #e74c3c;
  font-weight: bold;
}

.participant-info {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx dashed #e0e0e0;
}

.participant-header {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  min-width: 160rpx;
  height: 70rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  line-height: 70rpx;
  border-radius: 8rpx;
  background-color: #f5f7fa;
  color: #7f8c8d;
  border: none;
}

.action-btn.primary {
  background-color: #2c3e50;
  color: #ffffff;
}

.action-btn.danger {
  background-color: #e74c3c;
  color: #ffffff;
}

/* 空列表 */
.empty-list {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #95a5a6;
}