/* pages/order/create.wxss */
page {
  height: 100vh; /* 固定高度 */
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
  overflow-x: hidden; /* 隐藏水平滚动条 */
  overflow-y: hidden; /* 隐藏垂直滚动条 */
  width: 100%;
  box-sizing: border-box; /* 确保padding不会增加宽度 */
  position: fixed; /* 固定位置 */
  top: 0;
  left: 0;
}

.container {
  margin-top: 200rpx; /* 调整为导航栏的高度 */
  height: calc(100vh - 90rpx); /* 固定高度，减去导航栏高度 */
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #f5f7fa;
  overflow-y: auto; /* 允许内容滚动 */
}

.form-container {
  width: 90%;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 30rpx;
  color: #2c3e50;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.location-input-container {
  display: flex;
  align-items: center;
}

.location-btn {
  margin-left: 20rpx;
  padding: 0 20rpx;
  height: 80rpx;
  background-color: #2c3e50;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.location-btn-text {
  font-size: 28rpx;
  color: #ffffff;
}

.picker-container {
  width: 100%;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #2c3e50;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.picker-text {
  flex: 1;
}

.picker-arrow {
  color: #7f8c8d;
  font-size: 24rpx;
}

.picker-view {
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #2c3e50;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #2c3e50;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 8rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}