/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  margin-top: 250rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 10rpx 50rpx;
  box-sizing: border-box;
  background-color: #f5f7fa;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background-color: #2c3e50;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.form-container {
  width: 100%;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-top: 90rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.form-header {
  margin-bottom: 40rpx;
  text-align: center;
}

.form-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #2c3e50;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 8rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.form-footer {
  margin-top: 30rpx;
  text-align: center;
}

.switch-form {
  font-size: 28rpx;
  color: #3498db;
}

.footer {
  width: 100%;
  text-align: center;
  margin-top: 40rpx;
}

.copyright {
  font-size: 24rpx;
  color: #95a5a6;
}